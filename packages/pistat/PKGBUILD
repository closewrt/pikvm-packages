pkgname=pistat
pkgver=0.5
pkgrel=1
pkgdesc="A small hardware status utility for Raspberry Pi"
url="https://github.com/pikvm/packages"
license=(GPLv3)
arch=(any)
depends=(bc bash)
source=(pistat.install pistat.sh)
md5sums=(SKIP SKIP)
install=pistat.install


package() {
	install -Dm755 pistat.sh "$pkgdir/usr/bin/pistat"
}
